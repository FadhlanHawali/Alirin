<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E952F"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:contentPadding="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/tanaman"
                app:civ_border_width="4dp"
                app:civ_border_color="#fff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monstera (Pot A)"
                android:textSize="15sp"
                android:gravity="center"
                android:fontFamily="@font/avenir"
                android:textStyle="bold"
                android:textColor="#75C33C"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="id : 543D7"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="@font/avenir"
                android:textColor="#75C33C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="2dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#F2F2F2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="70dp"
                                android:layout_weight="1"
                                android:src="@drawable/suhu"
                                android:background="@drawable/round_linear"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Suhu"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#75C33C"
                                    android:fontFamily="@font/avenir" />
                                <TextView
                                    android:id="@+id/txtSuhu"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:gravity="center_vertical"
                                    android:text="-"
                                    android:textSize="26sp"
                                    android:textStyle="bold"
                                    android:textColor="#75C33C"
                                    android:fontFamily="@font/avenir" />
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="2dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#F2F2F2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="70dp"
                                android:layout_weight="1"
                                android:src="@drawable/cahaya"
                                android:background="@drawable/round_linear"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Cahaya"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#75C33C"
                                    android:fontFamily="@font/avenir" />
                                <TextView
                                    android:id="@+id/txtCahaya"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:gravity="center_vertical"
                                    android:text="7/8"
                                    android:textSize="26sp"
                                    android:textStyle="bold"
                                    android:textColor="#75C33C"
                                    android:fontFamily="@font/avenir" />
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="2dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#F2F2F2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="70dp"
                                android:layout_weight="1"
                                android:src="@drawable/humaditi"
                                android:background="@drawable/round_linear"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Humiditas"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#75C33C"
                                    android:fontFamily="@font/avenir" />
                                <TextView
                                    android:id="@+id/txtHumiditas"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:gravity="center_vertical"
                                    android:text="92"
                                    android:textSize="26sp"
                                    android:textStyle="bold"
                                    android:textColor="#75C33C"
                                    android:fontFamily="@font/avenir" />
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="2dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#F2F2F2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="70dp"
                                android:layout_weight="1"
                                android:src="@drawable/tanah_ph"
                                android:background="@drawable/round_linear"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="pH Tanah"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#75C33C"
                                    android:fontFamily="@font/avenir" />
                                <TextView
                                    android:id="@+id/txtPh"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:gravity="center_vertical"
                                    android:text="-"
                                    android:textSize="26sp"
                                    android:textStyle="bold"
                                    android:textColor="#75C33C"
                                    android:fontFamily="@font/avenir" />
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Kondisi Baik"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textColor="#75C33C"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:fontFamily="@font/avenir"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnSiram"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/round_button_off"
                        android:text="Siram"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:fontFamily="@font/avenir"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btnSinar"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/round_button_off"
                        android:text="Sinar"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:fontFamily="@font/avenir"
                        android:textStyle="bold"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>